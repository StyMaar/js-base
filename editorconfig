# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 1 tab indentation for js files
[*.{js}]
charset = utf-8
indent_style = tab
indent_size = 1

# 2 spaces indentation for package.json
[package.json]
indent_style = space
indent_size = 2
